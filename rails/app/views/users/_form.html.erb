  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :zip_code %>
    <%= form.number_field :zip_code, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :company %>
    <%= form.text_field :company, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :company_description %>
    <%= form.text_field :company_description, class:"form-control" %>
  </div>

  <div class="actions">
    <button type="submit" class="btn btn-secondary active">Submit</button>
  </div>
  <% end %>
</div>
